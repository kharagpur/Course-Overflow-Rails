<!--form for an video-->
<% @stylesheet = "popup.css"%>
<div id = "wrapper-form">
<!--form for an analogy-->
<!-- Begin Header -->
	<%= render 'layouts/common_header' %>
<!-- End Header -->
	<div id="content-body">
		<div class="popup-form">
			<%= form_for(:video, :url=>{:controller => "videos", :action => 'create'}) do |f|  %>
				<%= render :partial =>"form", :locals => {:f => f }%> 
				<%= f.hidden_field :topic_id, :value => @topic.id %>
				<div class = "popup-form" >
					<div class = "popup_content-form" >
						<%= submit_tag ("Add New Video Link")%>	
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>