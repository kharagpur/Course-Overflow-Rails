body {
  font-size: 100%;
}
.popup {
  background-color: #676767;
  border-radius: 10px;
  -moz-border-radius: 10px;
  -webkit-border-radius: 10px;
  font-family: "Trebuchet MS", "Myriad Pro", sans-serif;
  width: 1000px;
  margin: 0 auto;
  padding: 10px 20px 30px 20px;
  overflow: hidden;
}
.popup .title {
  color: #fff;
  font-size: 130%;
  margin-bottom: 10px;
}
.popup .title a {
  float: right;
  font-size: 70%;
  color: #d3f4ff;
}
.popup_content {
  padding: 10px;
  background-color: #fff;
}
.definition {
  background-color: #d3f4ff;
  color: #333333;
  font-size: 90%;
  padding: 10px;
  line-height: 18px;
  margin-bottom: 18px;
}
.definition p {
  margin-bottom: 10px;
}
.definition_title {
  margin-bottom: 5px;
}
.vote {
  text-align: right;
}
.vote a {
  color: #333;
  display: inline-block;
}
.upvote,
.downvote {
  height: 14px;
  padding-right: 20px;
  background: url("../images/vote.png") top right no-repeat;
  text-decoration: none;
}
.downvote {
  background-position: right -14px;
}
.submitted_by {
  margin-right: 10px;
}

.component-options a {
  color: #38c9ff;
  padding-top:0px;
  margin: 0 auto;
  text-decoration:none;
}

.popup-form {
  background-color: #676767;  
  -moz-border-radius: 10px;
  -webkit-border-radius: 10px;  
  font-family: "Trebuchet MS", "Myriad Pro", sans-serif;
  width: 500px;
  margin: 0 auto;
  padding: 20px 70px 30px 20px;
  overflow: hidden;

}
#content-body {
  background-color: #e7e7e7;
  padding-top: 20px;
  padding-bottom: 20px;
  width:700px;
  margin: 0 auto;
  -moz-border-radius: 10px;
  -webkit-border-radius: 10px;
}
.title {
  color: #676780;
  font-size: 80%;
  margin-bottom: 10px;
}
.popup_content-form {
  padding: 10px;
  background-color: #fff;
  -moz-border-radius: 10px;
  -webkit-border-radius: 10px;
  margin-top: 10px;
  margin-bottom: 0px;
}
#wrapper-form {
  width: 700px;
  margin: 0 auto;
}
