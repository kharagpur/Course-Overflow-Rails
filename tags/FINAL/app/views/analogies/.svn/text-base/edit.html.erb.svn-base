<div id = "wrapper-form">
<!--form for an analogy-->
<!-- Begin Header -->
	<%= render 'layouts/common_header' %>
<!-- End Header -->

<% @stylesheet = "popup.css"%>
<div id="content-body">
	<div class="popup-form">
		<%= form_for(@analogy, :url=>{ :action => 'update', :id => @analogy.id}) do |f|  %>
			<%= render :partial =>"form", :locals => {:f => f }%> 
			<%= f.hidden_field :topic_id, :value => @topic.id %>
			<div class = "popup-form" >
				<div class = "popup_content-form" >
					<%= submit_tag ("Edit Analogy")%>	
				</div>
			</div>
		<% end %>
	</div>
</div>
</div>